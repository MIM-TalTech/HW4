
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.PageTitle;
    var itemId = Model.ItemId;
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        @RenderBody()
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@itemId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
    @RenderSection("Details")
</div>
